cat > rsassapss.cnf <<EOF
[default]
openssl_conf = openssl_init

[openssl_init]
engines = engine_section

[engine_section]

[req]
default_md = sha256
distinguished_name = dn
req_extensions = req_ext

[dn]
C = US
ST = State
L = City
O = Organization
OU = Organizational Unit
CN = YourCommonName

[req_ext]
subjectAltName = @alt_names

[alt_names]
DNS.1 = example.com

[ca]
default_ca = CA_default

[CA_default]
default_md = sha256

[usr_cert]
hash_algo = sha256
sigalg = rsa_pss
EOF
