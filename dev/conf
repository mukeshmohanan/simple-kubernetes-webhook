openssl genpkey -algorithm RSA-PSS -out private_key.pem \
-pkeyopt rsa_keygen_bits:2048 \
-pkeyopt rsa_pss_keygen_saltlen:-1


[req]
distinguished_name = req_distinguished_name
default_md = sha256
string_mask = utf8only

[req_distinguished_name]
countryName = Country Name (2 letter code)
countryName_default = US
stateOrProvinceName = State or Province Name (full name)
stateOrProvinceName_default = California
localityName = Locality Name (eg, city)
localityName_default = San Francisco
organizationName = Organization Name (eg, company)
organizationName_default = My Company
commonName = Common Name (eg, YOUR name)
commonName_max = 64

[v3_req]
# Specify basic constraints
basicConstraints = CA:FALSE

[pss]
# Specify RSASSA-PSS signature scheme for CSR
rsa_padding_mode = pss
rsa_pss_saltlen = -1
hashAlgorithm = sha256


openssl req -new -key private_key.pem -out csr.pem -config openssl-pss.cnf -sigopt rsa_padding_mode:pss -sigopt rsa_pss_saltlen:-1
